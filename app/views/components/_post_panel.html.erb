<!-- the post panel used across the app -->
<div class="panel panel-default post-panel">
  <div class="panel-body row">
    <div class="col-sm-1">
      <%= render '/components/post_owner_profile_image' %>
    </div>
    <div class="col-sm-11">
      <p class="post-header">
        <span class="post-owner">
          <%= link_to(User.find_by(:id => @post.user_id).name, user_path( User.find(@post.user_id)))%> 
        </span> 
        <span class="post-creation">- 
          <%= @post.created_at.to_formatted_s(:short) %>
        </span>
      </p>
      <p class="post-title">
        <%= link_to(@post.title, post_path(@post)) %>
      </p>
      <p class="post-content">
        <%= link_to(@post.url, @post.url) %>
      </p>
    </div>
    <div class="col-sm-12">
      <p class="post-links">
        <div class="col-sm-2">
          <span class="glyphicon glyphicon-heart g-links" aria-hidden="true"></span>
        </div>
        <div class="col-sm-2">
          <span class="glyphicon glyphicon-comment g-links" aria-hidden="true"></span>
        </div><!--
        <div class="col-sm-2">
          <span class="glyphicon glyphicon-retweet g-links" aria-hidden="true"></span>
        </div>-->
        <div class="col-sm-2">
          <span class="glyphicon glyphicon-option-horizontal g-links" aria-hidden="true"></span>
        </div>
        <% if user_signed_in? %>
          <% if current_user.id == @post.user_id %>
            <div class="col-sm-2">
             <span><%= link_to "Edit", edit_post_path(@post) %></span>      
            </div> 
            <div class="col-sm-2">
              <span><%= link_to "Delete", post_path(@post), method: "delete" %></span>
            </div> 
          <% end %>                  
        <% end %>
      </p>
    </div>
  </div>
</div>