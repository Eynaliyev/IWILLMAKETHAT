<!-- longer description that shows on the post's show page with further details about the post -->
<div class="panel panel-default description-panel">
  <h4 class="post-description-header">Desription:</h4>
  <br>
  <% if @post.description %>
    <span class="post-description">
      <%= @post.description %>
    </span>
  <% else %>
    <span class="post-description">
      No description exists for this post.
   </span>
  <% end %>
</div>